
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

code-font()
  font-family 'Ubuntu Mono', Monaco, Consolas, monospace !important

body-font()
  font-family Georgia, serif

display-font()
  font-family Unna, serif

sans-font()
  font-family Ubuntu, sans-serif

body {
  body-font()
  background: #8b4c30 url(body_bg_tile.jpg);
  margin: 0; padding: 0; border: 0;
  min-width: 1024px;
}
pre, code, .ace_editor {
  code-font()
  font-size: 16px !important;
}

img {
    border:none;
}

.wrapper {
  background: url(top_bg_tile.png) repeat-x;
  min-height: 1047px;
}

.section {
  clear: left;
  width: 998px;
  margin-left: auto;
  margin-right: auto;
  padding: 0;
  vertical-align: top;
}
.main-column {
  padding: 20px 50px 20px 100px;
  width: 572px; /* 722px wide */
}
.side-column {
  float: right;
  width: 236px; /*276px wide*/
  padding: 0 20px;
  color: rgba(0,0,0,0.7);
  h2 {
    display-font()
    font-size: 28px;
    font-weight: normal;
    margin: 0 0 5px 0;
    color: #3b1a0d;
  }
  p {
    margin: 0 0 40px 0;
    font-size: 14px;
    line-height: 1.5em;
    color: #361308;
  }
}

.artiles-dropdown {
    margin-bottom: 30px;
}

.contributors .gravitar {
   margin: 0 10px 10px 0;
}

.gravitar {
  display: inline-block;
  margin: 5px;
  padding: 4px;
  height: 36px;
  width: 36px;
  background-color:#fff;
  border: 1px solid #aaa;
  img {
    width: 36px;
    height: 36px;
    border: 0; margin: 0; padding: 0;
  }
}
.contributors {
  margin: 0 0 30px 0;  
}
.categories {
  display-font()
  padding: 0;
  margin: 0 0 30px 2px;
  li {
    list-style-type: none;
    margin: 0;
    padding: 0;
    line-height: 1.6em;
  }
  a, a:visited {
    color: #bbd284;
    font-size: 18px;
    text-decoration: none;
    display-font()
  }
  a:hover, a:active {
    color: #c6dc9c;
    text-decoration: underline;
  }
}


.bookmark {
  position: absolute;
  margin-left:-100px;
  .date {
    width: 76px;
    height: 43px;
    padding: 6px 14px 10px;
    margin-top: 10px;
    text-align: center;
    background: url(ribbon.png) no-repeat;
    sans-font()
    font-size: 16px;
    text-shadow: 0 1px 1px #097503;
    line-height: 20px;
    font-weight: bold;
    color: #fff;
    margin-left: -16px;
  }
  .author {
    margin: 5px;
    text-align: center;
    width: 60px;
    display-font()
    p {
      text-align: left;
      margin: 0;
      padding: 0 0 0 10px;
      font-size: 12px;
      line-height: 1.2em;
    }
  }
}

.article {
  margin-top: 20px;
  min-height: 170px;
  h1 {
    padding-top: 5px;
    display-font()
    font-size: 36px;
    font-weight: normal;
    margin: 0;
    line-height: 1.2em;
    a, a:visited {
      color: #000;
      text-decoration: none;
    }
    a:hover, a:active {
      color: #222;
      text-decoration: underline;
    }
  }
  h2 {
    font-size: 20px;
    font-weight: bold;
    margin-top: 0;
    color: #222;
  }
  h3 {
    font-size: 20px;
    margin: 0;
    font-weight: normal;
    color: #111;
  }
  a, a:visited {
    text-decoration: none;
    color: #579c01;
  }
  a:hover, a:active {
    text-decoration: underline;
  }

  p {
    font-size: 16px;
    line-height: 23px;
    code {
      display: inline-block;
      background-color: #f9f9f9;
      padding: 0px 2px;
      margin: 0 -1px;
      box-shadow: 0px 0px 2px #888;
      border-radius: 3px;
    }
  }

  pre {
    padding: 8px !important;
    background-color: #222;
    color: #fff;
    box-shadow: 0px 1px 6px 0px rgba(0,0,0,1) inset;
    border-radius: 0px;
    border: 0 !important;
    overflow: hidden;
    line-height: 1.2em;
  }
  .snippet {
    pre {
      margin: 0;
    }
    margin: 1em 0;
    .filename, .toolbar {
      sans-font()
      font-size: 12px;
      background-color: #777;
      color: #eee;
    }
    .filename {
      padding: 2px 5px;
      float: right;
      margin: -10px -10px 0 4px;
      border-radius: 0 0 0 3px;
    }
    .filename:hover {
      text-decoration: none;
      color: #fff;
    }
    .toolbar {
      border-radius: 0 0 4px 4px;
      text-align: right;
      padding: 3px 10px;
      a, a:visited {
        text-decoration: none;
        color: #eee;
      }
      a:hover, a:active {
        text-decoration: underline;
        color: #fff;
      }
    }
  }
  .drop-caps {
    display-font()
    opacity: 0.8;
    display: block;
    float: left;
    line-height: 40px;
    font-size: 48px;
    padding-right: 10px;
  }
  .content {
    min-height: 150px;
  }
  /*Put a clearfix hack on ace_editor so it doesn't have float issues*/
  /*TODO: Fix in ace or snippet tool*/
  .ace_editor:before,
  .ace_editor:after {
    content:"";
    display:table;
  }
  .ace_editor:after {
    clear:both;
  }
  .snip-container {
    margin: 1em 0;
  }

}

.article-links {
  text-align: right;
}
.article-links a {
  display-font()
  font-size: 14px;
}
.article-divider {
  background: url(article-divider.png) no-repeat scroll 0 0;
  display: block;
  height: 23px;
  width: 616px;
  margin-top: 20px;
}

.searchbox {
  margin: 45px 0 6px 20px;
  display: inline-block;
  height: 19px;
  border: 0;
  padding: 4px 5px;
  font-size: 13px;
  line-height: 13px;
  width: 220px;
  border-radius: 4px;
  box-shadow: 2px 0px 2px rgba(0,0,0,0.5);
  sans-font()
}

.header {
  .logo {
    float:left;
    margin: 0 -4px -24px -1px;
    position: relative;
  }
  .follow {
    h2 {
      margin: 40px 0 0 0;
      padding: 0;
      display-font()
    }
    .button {
      background-image: url(buttons.png);
      width: 71px;
      height: 71px;
      margin: 7px 8px 0 0;
      display: inline-block;
    }
    .rss { background-position: 0 0; }
    .twitter { background-position: 71px 0; }
    .rss:hover { background-position: 0 71px; }
    .twitter:hover { background-position: 71px 71px; }
  }

}

.body {
  .main-column {
    background: #fff;
    box-shadow: 0 3px 5px rgba(0,0,0,1);
    padding-bottom: 10000px;
    margin-bottom: -10000px;
  }
  overflow: hidden;
  .filter-dropdown {
    width: 230px;
    display: inline-block;
  }
  .dark {
    background-color: #000000;
    background-color: rgba(0,0,0,0.36);
    color: #fff;
    width: 236px;
    padding: 20px;
    margin: 0 -20px;
    padding-bottom: 10000px;
    margin-bottom: -10000px;
